include /system/_components/index
include /system/_frontmatter/index
-const frontmatter = getFrontmatter(current.path, public)

+hero()
main.container
	section#experience
		+heading({title: 'experience'})
		for experience in frontmatter.public.experience
			+text-card(experience)

	section#opensource-works
		+heading({title: 'open-source works'})
		for work in frontmatter.public.work
			+text-card(work)

	section#other-works
		+heading({title: 'other works'})
		ul.other-works
			li: a(href='http://kunst.com.br' target='_blank')
				span kunst
				span.-fade  landing page
				i(data-feather='external-link')
			li: a(href='/system/assets/documents/tangente.pdf' target='_blank')
				span tangente
				span.-fade  analog photography on x-ray plates
				i(data-feather='file')

	section#contact
		+heading({title: 'contact'})
		+contact()
